<!--
    app:type defines what map this fragment should show. Possible values are:
    auto                Checks Google Maps, if not available falls back to Huawei Maps
    google_then_huawei  Same as auto
    huawei_then_google  Checks Huawei Maps, if not available falls back to Google Maps
    google              Forces Google Maps (will throw exception if not available)
    huawei              Forces Huawei Maps (will throw exception if not available)
 -->
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map"
    android:name="org.m0skit0.android.mapswrapper.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:type="auto"
    tools:context=".demos.BasicMapDemoActivity">

</fragment>
